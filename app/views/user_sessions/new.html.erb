<div class="container">
          <h1>ログイン</h1>
          <%= flash[:alert]%>

          <%= form_with url: user_sessions_path, method: :post do |f| %>
            <div class="field">
              <%= f.label :email ,"メールアドレス"%>
              <%= f.text_field :email %>
            </div>
            
            <div class="field">
              <%= f.label :password ,"パスワード"%>
              <%= f.password_field :password %>
            </div>
            
            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          <% end %>

          <%= link_to '戻る', users_path %>
</div>
